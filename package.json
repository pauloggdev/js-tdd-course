{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "Nossa biblioteca do curso de JS com TDD na prática",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint src/*.js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:coverage": "nyc npm test",
    "prepare": "husky install",
    "build": "./node_modules/.bin/webpack --progress",
    "watch": "npm run build -- --watch",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pauloggdev/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Paulo João <pauloggjoao@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pauloggdev/js-tdd-course/issues"
  },
  "homepage": "https://github.com/pauloggdev/js-tdd-course#readme",
  "devDependencies": {
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.8",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "dotenv": "^16.0.3"
  }
}
